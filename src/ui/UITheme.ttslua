-------------------------------------------------------------------------------
-- Valid Player Colors (TTS-specific)
-------------------------------------------------------------------------------

UITheme.validPlayerColors = { "Red", "Orange", "Yellow", "Green", "Blue", "Purple" }

-------------------------------------------------------------------------------
-- Helper Functions
-------------------------------------------------------------------------------

--- Get the visibility string for all valid player colors
---@return string Pipe-separated player colors for XML visibility
function UITheme.getPlayerVisibility()
  return table.concat(UITheme.validPlayerColors, "|")
end

return UITheme
