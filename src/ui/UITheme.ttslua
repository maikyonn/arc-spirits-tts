-------------------------------------------------------------------------------
-- UITheme: Centralized theme constants for UI styling
-- Industry-standard 5-color palette inspired by Material Design / Tailwind
-------------------------------------------------------------------------------

local UITheme = {}

-------------------------------------------------------------------------------
-- Typography
-------------------------------------------------------------------------------

UITheme.fonts = {
  primary = "font_opsilon/opsilon-regular",
  italic = "font_opsilon/opsilon-italic"
}

-------------------------------------------------------------------------------
-- Colors - Simplified 5-Color System
-------------------------------------------------------------------------------

UITheme.colors = {
  -- CORE PALETTE (5 colors)
  background = "#0a0a12",    -- Darkest - main background
  surface = "#1a1a2e",       -- Panels, cards, elevated content
  primary = "#4a6fa5",       -- Accent color for actions, highlights
  text = "White",            -- Primary text
  muted = "#666666",         -- Secondary text, borders, disabled states

  -- SEMANTIC VARIANTS (derived from core)
  success = "#2d5d2d",       -- Green - confirm, start game, positive actions
  danger = "#5d2d2d",        -- Red - reset, delete, warnings, destructive actions

  -- BREAKPOINTS (game-specific progression tiers)
  breakpoints = {
    bronze = "#cd7f32",
    silver = "#c0c0c0",
    gold = "#ffd700",
    prismatic = "#ff69b4"
  }
}

-------------------------------------------------------------------------------
-- Colorblocks - Colors for buttons
-- normalColor|highlightedColor|pressedColor|disabledColor
-------------------------------------------------------------------------------

UITheme.colorblocks = {
  surface = "#1a1a2e00|#1f1f3740|#0d0d1740|#666666",  -- surface, surface with value 120%, surface with value 50%, muted
  primary = "#4a6fa5|#5984c6|#253752|#666666",        -- primary, primary with value 120%, primary with value 50%, muted
  success = "#2d5d2d|#367036|#162e16|#666666",        -- success, success with value 120%, success with value 50%, muted
  danger = "#5d2d2d|#703636|#2e1616|#666666",         -- danger, danger with value 120%, danger with value 50%, muted
}

